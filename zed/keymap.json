// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "alt-1": "vim::ToggleProjectPanelFocus",
      "ctrl-shift-f": "project_search::SearchInNew",
      "F6": "task::Spawn"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore",
      "k j": "vim::NormalBefore"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space f": "file_finder::Toggle",
      "space 1": ["pane::ActivateItem", 0],
      "space 2": ["pane::ActivateItem", 1],
      "space 3": ["pane::ActivateItem", 2],
      "space 4": ["pane::ActivateItem", 3],
      "space 5": ["pane::ActivateItem", 4],
      "space 6": ["pane::ActivateItem", 5],
      "space 7": ["pane::ActivateItem", 6],
      "space 8": ["pane::ActivateItem", 7],
      "space 9": ["pane::ActivateItem", 8]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "F1": "editor::Hover",
      "F2": "project_symbols::Toggle",
      "F3": "buffer_search::Deploy",
      "shift-F3": "buffer_search::DeployReplace",
      "ctrl-l": "workspace::ActivateNextPane",
      "ctrl-shift-o": "project_symbols::Toggle"
    }
  },
  {
    "context": "!Editor",
    "bindings": {
      "F2": "file_finder::Toggle"
    }
  },
  {
    "context": "!ProjectPanel",
    "bindings": {
      "alt-1": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "alt-1": "workspace::ToggleRightDock",
      "ctrl-shift-n": "project_panel::NewFile",
      "ctrl-alt-shift-n": "project_panel::NewDirectory"
    }
  }
]
